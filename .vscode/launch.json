{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flash Sale Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.app:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/flash-sale-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/flash-sale-backend"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Flash Sale Backend (No Reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.app:app",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "cwd": "${workspaceFolder}/flash-sale-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/flash-sale-backend"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Online Polling",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.app:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/online-polling",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/online-polling"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}

